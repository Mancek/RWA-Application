@model AdventureWorks.Models.Proizvod

@{
    ViewBag.Title = "Create";
    var ddlOpcije = new SelectList(
        items: ViewBag.SvePotkategorije,
        dataTextField: "Naziv",
        dataValueField: "IDPotkategorija");
}

<h2>Create</h2>



@model AdventureWorks.Models.Potkategorija

@{
    ViewBag.Title = "Create";
    var ddlOpcije = new SelectList(
        items: ViewBag.SveKategorije,
        dataTextField: "Naziv",
        dataValueField: "IDKategorija");
}
<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div>
        <h4>Potkategorija</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="input-group mb-3">
            @Html.LabelFor(model => model.KategorijaID, "KategorijaID", htmlAttributes: new { @class = "form-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KategorijaID", selectList: ddlOpcije, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KategorijaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group mb-3">
            @Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "form-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group mb-3">
            <div class="offset-4 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
